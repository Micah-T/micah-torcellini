<p>{{ resume.summary | safe }}</p>

<p>Find Micah on <a href="{{ metadata.author.linkedin }}">LinkedIn</a>, <a href="{{ metadata.author.github }}">GitHub</a>, or contact him by email at <a href="mailto:{{ metadata.author.email }}">{{ metadata.author.email }}</a>.</p>

<p class="no-dropcap">Skip to <a href="#experience">experience</a>, <a href="#publications">publications and presentations</a>, <a href="#education">education</a>, <a href="#scholarships">awards and scholarships</a>, or <a href="#languages">foreign languages</a>.
<section class="resume__section" id="experience">
    <h2>Experience</h2>
    <ul class="resume__list">
    {% set experiences = resume.experiences %}
    {% for experience in experiences %}
            <li class="resume__item">
                <hgroup class="resume__header">
                    <h3 class="resume__title">{{ experience.title }}</h3>
                    <p class="resume__org"><a href="{{ experience.org.url }}">{{ experience.org.name }}</a>, {{ experience.org.location }}</p>
                    <p class="resume__dates">
                        {{ experience.begin }}
                        {% if experience.end %}&mdash;{{ experience.end }}{% endif %}
                    </p>
                </hgroup>
                <ul class="resume__responsibilities">
                    {% for responsibility in experience.responsibilities %}
                        <li>{{ responsibility | safe }}</li>
                    {% endfor %}
                </ul>
    {% endfor %}
    </ul>
</section>
<section id="publications">
    <h2>Publications and Presentations</h2>
    <ul class="resume__list">
    {% set publications = resume.publications %}
    {% for publication in publications %}
        <li class="resume__item">
            <hgroup class="resume__header">
                <h3 class="resume__title">
                    {% if publication.url %}<a href="{{ publication.url }}">{% endif %}
                    {{ publication.title | safe }}
                    {% if publication.url %}</a>{% endif %}
                </h3>
                <p><i>{{ publication.journal or publication.venue }}</i> {{ publication.vol }}{% if publication.no %}, no. {% endif %}{{ publication.no }} ({{ publication.date }})</p>
            </hgroup>
                <p>{{ publication.summary }}</p>
        </li>
    {% endfor %}
    </ul>
</section>

<section id="education">
    <h2>Education</h2>
    {% set education = resume.education %}
    <ul>
        {% for e in education %}
            <li>{{ e }}</li>
        {% endfor %}
    </ul>
</section>

<section id="scholarships">
    <h2>Awards and Scholarships</h2>
    {% set scholarships = resume.scholarships %}
    <ul>
        {% for e in scholarships %}
            <li>{{ e.name }}</li>
        {% endfor %}
    </ul>
</section>

<section id="languages">
    <h2>Foreign Languages</h2>
    {% set languages = resume.languages %}
    <ul>
        {% for l in languages %}
            <li>{{ l }}</li>
        {% endfor %}
    </ul>
</section>

